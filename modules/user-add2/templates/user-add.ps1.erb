$computer = [ADSI]"WinNT://$env:COMPUTERNAME,Computer"
<% @users.each do |u| %>
$test = $computer.Children | where {$_.SchemaClassName -eq 'user'} | where {$_.Name -eq '<%=u['id']%>'}
if($test -eq $null){
net user <%=u['id']%> '<%=u['passwd']%>' /add /expires:never /passwordchg:no /scriptpath:'logon.bat'
net localgroup "<%=u['group']%>" "<%=u['id']%>" /add
}
<% end %>
net user Administrator P@ssw0rd /active:yes

$testcreator = $computer.Children | where {$_.SchemaClassName -eq 'user'} | where {$_.Name -eq 'testcreator'}
if($testcreator){
net user creater /delete
